func ConfirmDuplicate(ctx context.Context, accountID string, tx *sql.Tx) error {
    var existingCount int
    query := "SELECT COUNT(*) FROM `users` WHERE `account_id` = ?"
    
    // クエリ実行およびスキャンのエラーハンドリング
    err := tx.QueryRowContext(ctx, query, accountID).Scan(&existingCount)
    if err != nil {
        // SQLクエリの実行または読み込みに失敗した場合、Internal Server Error を返す
        return errors.New("internal server error")
    }

    // 重複するアカウントIDが存在する場合のエラーハンドリング
    if existingCount > 0 {
        return errors.New("account ID already exists")
    }

    // 正常に実行された場合、nilを返す
    return nil
}
